{
  "name": "@engalar/vite-plugin-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "homepage": "https://github.com/engalar/vite-plugin-monorepo/",
  "keywords": [
    "frontend",
    "hmr",
    "dev-server",
    "build-tool",
    "vite",
    "react"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "typecheck": "tsc -p scripts && tsc -p packages/vite-plugin-mendix",
    "test": "run-s test-serve test-build",
    "build": "pnpm -r --filter=\"@engalar/vite-plugin-mendix\" build",
    "dev": "pnpm -r --parallel --filter='./packages/*' run dev",
    "release": "tsx scripts/release.ts",
    "ci-publish": "tsx scripts/publishCI.ts"
  },
  "devDependencies": {
    "execa": "^8.0.1",
    "@eslint-types/typescript-eslint": "^6.12.0",
    "@eslint-types/import": "^2.29.0-1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/release-scripts": "^1.3.1",
    "eslint": "^8.55.0",
    "eslint-define-config": "^2.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-n": "^14.0.0",
    "eslint-plugin-regexp": "^2.1.2",
    "conventional-changelog-cli": "^4.1.0",
    "fs-extra": "^11.2.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "picocolors": "^1.0.0",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.2",
    "unbuild": "^2.0.0",
    "vite": "^5.0.5",
    "vitest": "^1.0.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@8.11.0"
}
